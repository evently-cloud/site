<form name="newsletter" netlify action="/newsletter-signup-completed" netlify-honeypot="phone"
    id="newsletter-signup" class="text-center"
>
    <div class="hidden">
        <label>Don’t fill this out if you’re human: <input name="phone"/></label>
    </div>
    <div class="flex flex-col items-start lg:m-auto lg:w-3/5">
        <label class='bg-none'>Name</label><input type="text" name="name" required/>
    </div>
    <div class="flex flex-col items-start lg:m-auto lg:w-3/5">
        <label class='bg-none'>Email</label><input type="email" name="email" required/>
    </div>
    <button type="submit" class="btn m-auto block lg:w-1/5 text-center mt-5" x-data {% shinyAJSFunc %}>Submit</button>
</form>
